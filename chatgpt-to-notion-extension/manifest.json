{
    "manifest_version": 3,
    "name": "ChatGPT to Notion",
    "version": "1.0.0",
    "description": "Save conversations from ChatGPT (openai.com) directly to your Notion workspace.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.openai.com/*"
        ],
        "js": ["contentScript.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  
  